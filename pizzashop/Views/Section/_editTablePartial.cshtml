@using pizzashop_Repository.ViewModel
@model TableSectionDto

@{
    Model.TableDto ??= new TableDto();
    Model.Sections ??= new List<SectionDto>();
}


<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <form id="EditTableForm" method="post" novalidate>
            <div class="modal-header">
                <h5 class="modal-title" id="EditTableLabel">Edit Table</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <input type="number" asp-for="@Model.TableDto.Id" hidden>

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-floating mb-1">
                            <input asp-for="@Model.TableDto.TableName" type="text" class="form-control"
                                id="EditTableName" placeholder="Name" />
                            <label for="EditTableName">Name</label>
                            <span class="error-message text-danger small"></span>
                        </div>
                    </div>

                    <!-- Section Field -->
                    <div class="col-md-6">
                        <div class="form-floating mb-1">
                            <select asp-for="@Model.TableDto.SectionId" class="form-select" id="EditSectionId"
                                name="TableDto.SectionId">
                                <option selected disabled hidden>Select a Section</option>
                                @foreach (var item in Model.Sections)
                                {
                                    <option value="@item.Id"
                                        selected="@(item.Id == Model.TableDto.SectionId ? "selected" : null)">
                                        @item.SectionName
                                    </option>
                                }
                            </select>
                            <label for="EditSectionId">Section</label>
                            <span class="error-message text-danger small"></span>
                        </div>
                    </div>

                    <!-- Capacity Field -->
                    <div class="col-md-6">
                        <div class="form-floating mb-1">
                            <input asp-for="@Model.TableDto.Capacity" type="number" class="form-control"
                                id="EditCapacity" placeholder="Capacity" />
                            <label for="EditCapacity">Capacity</label>
                            <span class="error-message text-danger small"></span>
                        </div>
                    </div>

                    <!-- Availability Status Field -->
                    <div class="col-md-6">
                        <div class="form-floating mb-1">
                            <select asp-for="@Model.TableDto.IaAvailable" class="form-select" id="EditIsAvailable"
                                name="TableDto.IaAvailable">
                                <option selected disabled hidden value="">Select a Status</option>
                                <option value="true" selected="@Model.TableDto.IaAvailable">Available</option>
                                <option value="false" selected="@(!Model.TableDto.IaAvailable)">Occupied</option>
                            </select>
                            <label for="EditIsAvailable">Status</label>
                            <span class="error-message text-danger small"></span>
                        </div>
                    </div>
                </div>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

