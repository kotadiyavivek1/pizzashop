@using pizzashop_Repository.ViewModel
@model SectionDto


<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="EditSectionModalLabel">Add Section</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form method="post" id="EditSectionForm" novalidate>
            <div class="modal-body">
                <div class="form-floating">
                    <input type="hidden" asp-for="@Model.Id">
                    <input type="text" class="form-control rounded-0" id="EditSectionName" asp-for="@Model.SectionName"
                        placeholder="@Model.SectionName @Model.Id">
                    <label for="EditSectionName">Name</label>
                    <span class="text-danger small" id="EditSectionNameError"></span>
                </div>
                <div class="form-floating mt-3">
                    <input type="text" class="form-control rounded-0" id="Description" placeholder="@Model.Description"
                        asp-for="@Model.Description">
                    <label for="Description">Description</label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Save</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </form>
    </div>
</div>
