@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>404 - Page Not Found</title>
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            background-color: #d6f0f4;
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .container {
            text-align: center;
            max-width: 600px;
            width: 100%;
        }

        .logo {
            margin-bottom: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 45px;
            color: #0066A2;
        }

        .logo img {
            height: 80px;
            margin-right: 10px;
        }

        h1 {
            font-size: 120px;
            margin: 0;
            color: #0066A2;
        }

        h2 {
            font-size: 32px;
            margin: 10px 0;
            color: #0066A2;
        }

        p {
            color: #00497a;
            font-size: 16px;
            margin-bottom: 30px;
        }

        .btn-dashboard {
            display: inline-block;
            background-color: #0066A2;
            color: white;
            text-decoration: none;
            padding: 12px 24px;
            border-radius: 6px;
            font-size: 16px;
            transition: background-color 0.3s;
        }

        .btn-dashboard:hover {
            background-color: #005080;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="logo">
            <img src="~/images/logos/pizzashop_logo.png" alt="Logo">
            <span>PIZZASHOP</span>
        </div>

        <h1>404</h1>
        <h2>Page Not Found</h2>
        <p>Oops, the page you're looking for isn't here.</p>

        <a asp-action="Dashboard" asp-controller="User" class="btn-dashboard">Go to Dashboard</a>
    </div>
</body>
</html>